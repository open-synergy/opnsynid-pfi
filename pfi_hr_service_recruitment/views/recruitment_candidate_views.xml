<openerp>
<data>

<record id="hr_service_recruitment_candidate_view_form" model="ir.ui.view">
    <field name="name">hr_service.recruitment_candidate form</field>
    <field name="model">hr_service.recruitment_candidate</field>
    <field name="inherit_id" ref="hr_service_recruitment.hr_service_recruitment_candidate_view_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page name="brief_description" string="Brief Description">
                    <label for="objective"/>
                    <field name="objective" widget="html"/>
                    <label for="last_work"/>
                    <field name="last_work" widget="html"/>
                    <label for="last_education"/>
                    <field name="last_education" widget="html"/>
                </page>
                <page name="cover_letter" string="Cover Letter">
                    <label for="cover_letter"/>
                    <field name="cover_letter" widget="html"/>
                </page>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
